# Copy to .env and adjust as needed

# App
NOVA_ENV=production
NOVA_DATA_DIR=C:\\Nova\\data
NOVA_LOG_LEVEL=INFO
NOVA_PERMISSION_DEFAULT=prompt
NOVA_NONINTERACTIVE=0

# Internet/Search (bing supported)
NOVA_SEARCH_PROVIDER=bing
NOVA_SEARCH_API_KEY=<PUT_YOUR_BING_KEY_HERE>
NOVA_SAFESEARCH=on
NOVA_DOMAIN_ALLOWLIST=wiki,wikipedia,edu,gov,mit,stanford,nasa.gov
NOVA_HTTP_RATE_LIMIT_PER_MIN=30

# CLI
NOVA_CLI_COLOR=true
